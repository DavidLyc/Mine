<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <ImageView
        android:id="@+id/home_page_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/home_page_background" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/home_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/home_bottombar"
        android:layout_below="@+id/home_page_background"
        android:overScrollMode="never" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:layout_above="@+id/home_bottombar"
        android:layout_marginBottom="2dp"
        android:background="#e8e8e8" />

    <RelativeLayout
        android:id="@+id/home_bottombar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="15dp">

        <ImageView
            android:id="@+id/home_bottombar_button"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="3dp"
            android:src="@drawable/home_center_selector" />

    </RelativeLayout>

</RelativeLayout>