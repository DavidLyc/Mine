<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/check_info_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="3dp"
    android:layout_marginStart="3dp"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardCornerRadius="3dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="5dp"
        android:paddingEnd="15dp"
        android:paddingStart="15dp"
        android:paddingTop="2dp">

        <com.jaredrummler.materialspinner.MaterialSpinner
            android:id="@+id/check_type_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-19dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/normal_text_color"
            android:textSize="16sp"
            card_view:ms_dropdown_max_height="350dp" />

        <com.jaredrummler.materialspinner.MaterialSpinner
            android:id="@+id/check_inst_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/normal_text_color"
            android:textSize="16sp"
            card_view:ms_dropdown_max_height="450dp" />

        <ImageView
            android:id="@+id/take_label_photo"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignBottom="@+id/take_label_photo_text"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:src="@drawable/icon_photo" />

        <TextView
            android:id="@+id/take_label_photo_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="17dp"
            android:layout_toStartOf="@+id/take_label_photo"
            android:text="@string/label"
            android:textColor="@color/normal_text_color"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/check_info_PeopleForCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/check_type_spinner"
            android:layout_marginTop="2dp"
            android:hint="@string/peopleforCheck"
            android:inputType="textMultiLine"
            android:maxLength="140"
            android:textSize="16sp"
            android:theme="@style/EditTextAppearance" />

    </RelativeLayout>

</android.support.v7.widget.CardView>