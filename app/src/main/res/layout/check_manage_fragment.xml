<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_activity_background">

    <TextView
        android:id="@+id/manage_check_nodataTip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:gravity="center_horizontal"
        android:textSize="18sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/check_manage_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/check_manage_bottom"
        android:overScrollMode="ifContentScrolls" />

    <include layout="@layout/check_manage_bottom" />

</RelativeLayout>